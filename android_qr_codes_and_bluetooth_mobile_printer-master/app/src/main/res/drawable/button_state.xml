<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#BCBBBB"
                android:endColor="#BCBBBB"
                android:angle="45"/>
            <solid android:color="#BCBBBB"/>
            <corners android:radius="10dp"/>
            <stroke
                android:width="1dp"
                android:color="#BCBBBB"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#F6F6F6"
                android:endColor="#F6F6F6"
                android:angle="45"/>
            <solid android:color="#F6F6F6"/>
            <corners android:radius="10dp"/>
            <stroke
                android:width="1dp"
                android:color="#F6F6F6"/>
        </shape>
    </item>
</selector>